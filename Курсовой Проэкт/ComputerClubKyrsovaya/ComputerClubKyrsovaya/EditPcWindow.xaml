<Window x:Class="ComputerClubKyrsovaya.EditPcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClubKyrsovaya"
        mc:Ignorable="d"
        Title="Редактирование" Height="150" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Margin="5">Название PC:</TextBlock>
            <TextBox x:Name="TextBoxName" Margin="5"></TextBox>

            <ComboBox x:Name="StatusComboBox" Margin="5"></ComboBox>
            <DockPanel HorizontalAlignment="Center">
                <Button Height="auto" Width="auto" Margin="10" Click="Button_Click">Принять</Button>
                <Button Height="auto" Width="auto" Margin="10" Click="Button_Click_1">Отменить</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
